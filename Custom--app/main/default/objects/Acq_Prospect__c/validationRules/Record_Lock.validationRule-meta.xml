<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Record_Lock</fullName>
    <active>true</active>
    <errorConditionFormula>AND( 
NOT(ISCHANGED(Record_Lock__c)), 
Record_Lock__c	= true 

)</errorConditionFormula>
    <errorMessage>Cannot edit this Record as it has either been Cancelled or Moved to Pipeline</errorMessage>
</ValidationRule>
