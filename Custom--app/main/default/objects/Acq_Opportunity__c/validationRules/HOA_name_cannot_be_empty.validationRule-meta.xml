<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>HOA_name_cannot_be_empty</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
				ISPICKVAL(HOA__c,'Yes'),
				ISBLANK(HOA_Name__c) 
)</errorConditionFormula>
    <errorMessage>HOA name cannot be empty.</errorMessage>
</ValidationRule>
